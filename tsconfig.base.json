{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@corpus/types": [
                "libs/types/src/index.ts"
            ],
            "@corpus/utils": [
                "libs/utils/src/index.ts"
            ],
            "@corpus/utils/*": [
                "libs/utils/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}