{
    "name": "@corpus/indexer",
    "version": "1.0.0",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "nodemon --exec ts-node src/index.ts",
        "init-index": "ts-node -r tsconfig-paths/register src/scripts/init-index.ts",
        "gen-synth": "ts-node src/scripts/generate-synthetic-corpus.ts",
        "ingest-synth": "ts-node -r tsconfig-paths/register src/ingestor.ts synthetic_100k.conllu corpus_synth_1"
    },
    "dependencies": {
        "@corpus/types": "^1.0.0",
        "@corpus/utils": "^1.0.0",
        "@opensearch-project/opensearch": "^2.5.0",
        "bullmq": "^5.1.0",
        "dotenv": "^16.3.1",
        "ioredis": "^5.3.2",
        "pg": "^8.11.3"
    },
    "devDependencies": {
        "@types/pg": "^8.10.9",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3"
    }
}